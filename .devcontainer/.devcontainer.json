{
  "name": "Laravel + Vue + Vite (SQLite, OpenSSL 3)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",

  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "mikestead.dotenv",
        "mehedidracula.php-namespace-resolver",
        "ms-azuretools.vscode-docker",
        "Vue.volar",
        "Vue.vscode-typescript-vue-plugin"
      ]
    }
  },

  "postCreateCommand": "composer install && npm install && php artisan key:generate && php artisan migrate --force",

  "forwardPorts": [8000, 5173],
  "remoteUser": "vscode"
}